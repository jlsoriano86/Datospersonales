<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context=".DatosActivity">

    <LinearLayout
        android:id="@+id/LayoutNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textolblNombre"
            android:textColor="@color/textos" />

        <EditText
            android:id="@+id/txNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hintNombre"
            android:inputType="textCapWords|textPersonName" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutApellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/lblApellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textolblApellidos"
            android:textColor="@color/textos" />

        <EditText
            android:id="@+id/txApellidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/hintApellidos"
            android:inputType="textCapWords|textPersonName"
            android:text=""
            tools:capitalize="words" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutEdadSexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/lblEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textolblEdad"
            android:textColor="@color/textos" />

        <EditText
            android:id="@+id/txEdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="3"
            android:inputType="number" />

        <RadioGroup
            android:id="@+id/grupoSexo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblSexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textolblSexo"
                android:textColor="@color/textos" />

            <RadioButton
                android:id="@+id/radioMujer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/textoMujer" />

            <RadioButton
                android:id="@+id/radioHombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="@string/textoHombre" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/lblEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/textolblEstado"
            android:textColor="@color/textos" />

        <Spinner
            android:id="@+id/eligeEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/eligeEstado" />

        <Switch
            android:id="@+id/swHijos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:showText="true"
            android:text="@string/textolblHijos"
            android:textColor="@color/textos"
            android:textOff="@string/swHijosNo"
            android:textOn="@string/swHijosSi" />

        <Button
            android:id="@+id/btnGenerar"
            android:layout_width="90dp"
            android:layout_height="68dp"
            android:layout_gravity="left"
            android:drawableTop="@android:drawable/checkbox_on_background"
            android:text="@string/textobtnGenerar"
            android:textColor="@color/botones" />

        <Button
            android:id="@+id/btnBorrar"
            android:layout_width="90dp"
            android:layout_height="68dp"
            android:drawableTop="@android:drawable/ic_delete"
            android:text="@string/textobtnBorrar"
            android:textColor="@color/botones" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>