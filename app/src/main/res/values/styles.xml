<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EstiloLayoutPrincipal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/miDimension1</item>
        <item name="android:layout_marginRight">@dimen/miDimension1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/miDimension1</item>
        <item name="android:paddingRight">@dimen/miDimension1</item>

    </style>

    <style name="EstiloLayoutSecundario">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/miDimension1</item>
        <item name="android:paddingBottom">@dimen/miDimension1</item>
    </style>

    <style name="EstiloLabels">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textos</item>
        <item name="android:fontFamily">@font/allerta</item>
       <item name="android:paddingTop">@dimen/miDimension1</item>
        <item name="android:paddingBottom">@dimen/miDimension1</item>
    </style>

    <style name="EstiloTextos">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/textos</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textCapWords|textPersonName</item>
        <item name="android:fontFamily">@font/rasa</item>
        <item name="android:paddingTop">@dimen/miDimension1</item>
        <item name="android:paddingBottom">@dimen/miDimension1</item>
    </style>

    <style name="EstiloEdad">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textos</item>
        <item name="android:ems">3</item>
        <item name="android:fontFamily">@font/rasa</item>
        <item name="android:paddingTop">@dimen/miDimension1</item>
        <item name="android:paddingBottom">@dimen/miDimension1</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="EstiloBotones">

        <item name="android:layout_width">@dimen/miDimension2</item>
        <item name="android:layout_height">@dimen/miDimension2</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>

        <item name="android:fontFamily">@font/rasa</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="EstiloLayoutResultado">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>


    </style>

    <style name="EstiloResultado">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/textos</item>
        <item name="android:inputType">textCapWords|textPersonName|textMultiLine</item>
        <item name="android:fontFamily">@font/rasa</item>
        <item name="android:paddingTop">@dimen/miDimension1</item>
        <item name="android:paddingBottom">@dimen/miDimension1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EstiloResultadoLand">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/textos</item>
        <item name="android:inputType">textCapWords|textPersonName|textMultiLine</item>
        <item name="android:fontFamily">@font/rasa</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.AppTheme.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="TemaPersonalizado" parent="Theme.AppTheme.Light.NoActionBar" >
        <item name="colorPrimary">@color/tema1</item>
        <item name="colorPrimaryDark">@color/tema2</item>
        <item name="colorAccent">@color/tema3</item>
        <item name="android:colorBackground">@color/tema4</item>
        <item name="android:colorForeground">@color/tema5</item>
        <item name="android:navigationBarColor">@color/tema5</item>
        <item name="android:statusBarColor">@color/tema2</item>
        <item name="android:textColorPrimary">@color/textos</item>
        <item name="android:textColorSecondary">@color/botones</item>
        <item name="android:textColorPrimaryInverse">@color/tema2</item>
        <item name="android:textColorSecondaryInverse">@color/tema2</item>
        <item name="android:windowBackground">@color/tema4</item>
    </style>


</resources>
